#!/bin/bash

set -eu

RULES=()
ARGS=()
MATCH=()
SUBST=()
TMP=()
INDEX=0

init() {
  local line
  RULES=()
  while read -r line; do
    RULES+=("$line")
  done <"$1"
  shift
  ARGS=("$@")
}
load-rule() {
  local ifs=$IFS
  set -f
  IFS=$'\t'
  TMP=(${RULES[$INDEX]})
  IFS=$ifs
}
load-match-subst() {
  local x state=before
  load-rule
  MATCH=()
  SUBST=()
  for x in "${TMP[@]}"; do
    if [[ "$x" == '$' ]]; then
      state=after
    elif [[ "$state" == before ]]; then
      MATCH+=("$x")
    elif [[ "$state" == after ]]; then
      SUBST+=("$x")
    fi
  done
  TMP=()
}
pattern-match() {
  local i=0 m
  for m in "${MATCH[@]}"; do
    ((i < ${#ARGS[@]})) || return
    [[ "${ARGS[$i]}" == $m ]] || return
    ((i++))
  done
}
scan-match() {
  local i
  for ((INDEX=0; INDEX<${#RULES[@]}; INDEX++)); do
    load-match-subst
    pattern-match && return
  done
  return 1
}
rewrite() {
  local s
  TMP=()
  for s in "${SUBST[@]}"; do
    TMP+=("$s")
  done
  ARGS=("${TMP[@]}")
  TMP=()
}
run() {
  while scan-match; do
    rewrite
  done
  echo "${ARGS[@]}"
}

init "$@"
run
